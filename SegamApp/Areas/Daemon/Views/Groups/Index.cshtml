@model IEnumerable<DataLayer.Group>

@{
    ViewBag.Title = "| ایجاد گروه";
    Layout = "~/Areas/Daemon/Views/Shared/_Layout.cshtml";
}

<h2></h2>

<p>
    @Html.ActionLink("ایجاد گروه", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.GroupID }, new { @class = "fa fa-edit" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.GroupID }, new { @class = "fa fa-trash" })

        </td>
    </tr>
}
</table>
